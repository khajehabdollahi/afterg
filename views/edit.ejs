<% layout('layout/boilerplate') %> 
 <br>
<div class="d-flex justify-content-center">
<main class="card col-8"; style="text-align:center">
<div class="container">
  <div class="row mt-3 d-flex justify-content-center">
   
   <div class="col-lg-6">
      <div class="pl-0">
        <h4 class="text-primary pl-0 pr-2 py-1">Edit your school information</h4>
      </div>
  <form action="/news/<%=school._id %>?_method=PUT " method="POST" enctype="multipart/form-data">
    
      <div class="row">
          <div class="col-lg-6">
            <label for="schoolsname">Schoolsname</label>
          </div>
          <div class="col-lg-6">
            <input
              class="form-control"
              style="height: 30px"
              type="text"
              name="schoolsname"
              id="schoolsname"
              value="<%=school.schoolsname %> "
            />
          </div>
        </div>

        <div class="row rounded" style="background: rgb(244, 240, 252)">
          <div class="col-lg-6">
            <label class="form-label" for="gender">Gender of students</label>
          </div>
          <div class="col-lg-6">
            <select
              name="gender"
              id="gender"
              class="pb-1 pt-0 form-control"
              style="height: 30px"
            >
              <option> <%=school.gender%></option>
              <option value="boys">Boys</option>
              <option value="girls">Girlsr</option>
              <option value="mixed">Mixed</option>
            </select>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-6">
            <label for="numberOfStudents">Number of Students</label>
          </div>
          <div class="col-lg-6">
            <input
              class="form-control"
              style="height: 30px"
              type="number"
              name="numberOfStudents"
              id="numberOfStudents"
              value="<%=school.numberOfStudents%>"
            />
          </div>
        </div>

        <div class="row" style="background: rgb(244, 240, 252)">
          <div class="col-lg-6">
            <label for="averageMonthlyIncomPerPerson"
